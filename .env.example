# Git44 Environment Configuration
# Copy this file to .env and fill in the required values

# Application
NODE_ENV=development
PING_MESSAGE=pong

# Server
PORT=3000
HOST=localhost

# Database (Optional - for production use a real database)
# DATABASE_URL=

# ScraperAPI Keys (Add multiple keys for rotation)
SCRAPER_API_KEY_1=sk_live_your_key_here
SCRAPER_API_KEY_2=sk_live_your_backup_key_here

# RemoveSora API
REMOVESORA_API_URL=https://www.removesorawatermark.online/api/removesora

# JWT Secrets (for production, use strong secrets)
JWT_SECRET=your-secret-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this

# API Configuration
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=100

# Job Queue Configuration
MAX_CONCURRENT_JOBS=3
JOB_POLL_INTERVAL_MS=2000
JOB_MAX_RETRIES=3
JOB_MAX_POLLS=8
JOB_POLL_INTERVAL_MIN_MS=3000
JOB_POLL_INTERVAL_MAX_MS=5000

# ScraperAPI Cooldown (minutes)
SCRAPER_KEY_COOLDOWN_MINUTES=60

# Logging
LOG_LEVEL=info
LOG_MAX_ENTRIES=10000

# CORS
CORS_ORIGIN=http://localhost:3000

# Features
ENABLE_ADMIN_PANEL=true
ENABLE_DEVELOPER_API=true
